{
  "name": "forgeon-game-planner",
  "version": "1.0.0",
  "description": "A comprehensive game development planning tool with AI assistance",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "game",
    "development",
    "planning",
    "ai",
    "assistant"
  ],
  "author": "westfallt13",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.1.1",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.forgeon.gameplanner",
    "productName": "Forgeon Game Planner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icons/application/512x512.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/application/512x512.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons/application/512x512.png",
      "category": "Development"
    }
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "node-llama-cpp": "^3.14.2"
  }
}
